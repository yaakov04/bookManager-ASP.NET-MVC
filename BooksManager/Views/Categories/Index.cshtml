@model IEnumerable<BooksManager.Models.Category>

@{
    ViewData["Title"] = "Categorías";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-8 p-0">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Todos</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body small-table">
                    <table id="dataTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                               
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="name">
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                   
                                    <td>

                                        <div class="d-inline">
                                            <button type="button" class="btn btn-primary mr-2 init-form-edit" data-toggle="modal" data-target="#modal-edit"><i class="fas fa-edit"></i></button>
                                            <div class="card card-primary d-none">
                                                <div class="card-header">
                                                    <h3 class="card-title">Editar Autor</h3>
                                                </div>
                                                <!-- /.card-header -->
                                                <!-- form start -->
                                                <form asp-action="Edit" data-action="Edit" data-id="@item.Id">
                                                    <div class="card-body">

                                                        <div class="form-group">
                                                            <label>Nombre</label>
                                                            <input name="Name" data-val="true" type="text" class="form-control" value="@item.Name">
                                                        </div>

                                                    </div>
                                                    <!-- /.card-body -->

                                                    <div class="card-footer">
                                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                                    </div>
                                                </form>
                                            </div>
                                            <!-- /.card -->
                                        </div>

                                        <form class="d-inline" asp-action="Delete" data-action="Delete" data-id="@item.Id">
                                            <button class="btn btn-danger" type="submit"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            
                            <th></th>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container-fluid -->

<partial name="_modalEdit" />

@section Scripts {
@{await Html.RenderPartialAsync("_DataTables");}
}